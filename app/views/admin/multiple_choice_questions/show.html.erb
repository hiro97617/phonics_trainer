<div class="py-16 bg-white">
  <div class="container m-auto px-8 py-6 bg-purple-200 border border-black w-5/12 text-gray-500 md:px-8 xl:px-0">
    <p class="text-4xl text-left"><%= t('.question') %> </p>
    <div class="grid grid-cols-1 place-items-center mb-4">
      <p class="text-5xl text-center"><%= @multiple_choice_question.body %></p>
      <svg class="h-16 w-16 text-center text-gray-500"  fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"/>
      </svg>
    </div>
    <div class="mx-auto grid gap-6 sm:w-5/12 sm:grid-cols-2 md:w-5/12 md:grid-cols-2 lg:w-10/12 lg:grid-cols-2">
      <div class="bg-white rounded-2xl shadow-xl px-3 py-3 sm:px-3 lg:px-3">
        <div class="mb-2 space-y-4">
          <h3 class="text-xl font-semibold text-center text-purple-900"><%= @multiple_choice_question.multiple_choices[0].body %></h3>
          <div>
            <%= image_tag @multiple_choice_question.multiple_choices[0].image.url %>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-xl px-3 py-3 sm:px-3 lg:px-3">
        <div class="mb-2 space-y-4">
          <h3 class="text-xl font-semibold text-center text-purple-900"><%= @multiple_choice_question.multiple_choices[1].body %></h3>
          <div>
            <%= image_tag @multiple_choice_question.multiple_choices[1].image.url %>
          </div>
        </div>
      </div>
      <% if @multiple_choice_question.multiple_choices[2].present? %>
        <div class="bg-white rounded-2xl shadow-xl px-3 py-3 sm:px-3 lg:px-3">
          <div class="mb-2 space-y-4">
            <h3 class="text-xl font-semibold text-center text-purple-900"><%= @multiple_choice_question.multiple_choices[2].body %></h3>
            <div>
              <%= image_tag @multiple_choice_question.multiple_choices[2].image.url %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= link_to t('.to_edit') , edit_admin_multiple_choice_question_path(@multiple_choice_question), id: "button-edit-#{@multiple_choice_question.id}", class: 'btn btn-success' %>
  </div>
</div>
