<div class="bg-white">
  <div class="bg-gradient-to-r from-yellow-200 to-yellow-50 p-8">
    <div class="flex flex-col">
      <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
          <div class="overflow-hidden border-8 border-solid border-red-600">
            <p class="text-4xl text-black font-bold m-4 border-solid border-red-400"><%= t('.title') %> : <%= @lesson.title %></p>
            <p class="text-4xl text-black font-bold m-4 border-solid border-red-400"><%= t(Lesson.human_attribute_name(:description)) %> : <%= @lesson.description %></p>
          </div>
        </div>
      </div>
      <div class="overflow-x-auto sm:-mx-6 lg:-mx-8 m-12 pb-12 border-black border-b">
        <p class="py-2 text-4xl text-black text-center ml-8 border-8 border-solid border-red-600 w-56"><%= t('.point') %></p>
        <p class="text-2xl text-black ml-8 my-4"><%= t('.point_description') %></p>
        <div class= "inline-grid grid-cols-1 ml-8">
          <div class="overflow-hidden pr-8 border-r-4 border-solid border-black-600 text-black">
            <p class="py-2 text-2xl text-black border-4 border-solid border-red-400  text-center mb-4"><%= t('.about_characters') %> </p>
            <% if @lesson.sample_image.file.nil? %>
              <p class="text-lg text-black font-bold my-8"><%= t('defaults.message.not_present', item: Lesson.human_attribute_name(:sample_image) ) %></p><br/>
              <p class="text-lg text-black font-bold my-8"><%= t('.no_char_point') %></p>
            <% else %>
              <%= image_tag @lesson.sample_image.url, size:'200x100' %>
              <div id="character-point" class="p-4 border border-solid border-black">
                <p class="text-lg text-black mb-4"><%= t('.big_char') %><%= @lesson.big_char_point %></p>
                <p class="text-lg text-black mt-4"><%= t('.small_char') %><%= @lesson.small_char_point %></p>
            <% end %>
          </div>
        </div>
        <div class= "inline-grid grid-cols-1">
          <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
            <p class="py-2 text-2xl text-black border-4 border-solid border-red-400 text-center mb-4"><%= t('.about_sound') %> </p>
            <div class="overflow-hidden">
              <table class="table-auto border-collapse border-4 border-black">
                <thead>
                  <tr class="bg-blue-100">
                    <th scope="col" class="border-2 border-black text-lg font-medium text-gray-900 px-6 py-4">
                      <%= t(Lesson.human_attribute_name(:vibrate)) %>
                    </th>
                    <th scope="col" class="border-2 border-black text-lg font-medium text-gray-900 px-6 py-4">
                      <%= t(Lesson.human_attribute_name(:audio)) %>
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <tr class="bg-blue-200">
                    <td class="border-2 border-black text-lg text-center text-gray-900 font-medium px-6 py-4 whitespace-nowrap">
                      <%= @lesson.vibrate_i18n %>
                    </td>
                    <td class="border-2 border-black text-lg text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                      <% if @lesson.audio.file.nil? %>
                        <%= t('defaults.message.not_present', item: Embed.human_attribute_name(:audio) ) %>
                      <% else %>
                        <%= audio_tag(@lesson.audio.url, controls: true) %>
                      <% end %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="flex flex-auto mt-6">
      <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
          <p class="py-2 text-4xl text-black text-center ml-8 border-8 border-solid border-red-600 w-1/4"><%= t('.plus') %></p>
          <p class="text-2xl text-black ml-8 mt-4 mb-2"><%= t('.plus_first_description') %></p>
          <p class="text-2xl text-black ml-8 mb-4"><%= t('.plus_second_description') %></p>
          <%= render 'embeds/embeds', embeds: @embeds %>
        </div>
      </div>
    </div>
  </div>
</div>

