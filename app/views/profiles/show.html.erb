<section class="bg-white border-b py-8">
  <div id="profile-page" class="container max-w-5xl mx-auto m-8 pt-16">
    <div class="w-full lg:w-3/12 px-4 lg:order-2 flex justify-center">
      <div class="relative">
        <%= image_tag current_user.avatar.url, class: "rounded-full border-2 border-gray-600", size: "400x400" %>
      </div>
    </div>
    <div class="text-center mt-12">
      <div class="mb-2 text-black text-xl mt-10 space-x-4">
        <i class="fa fa-user-circle fa-2x mr-4" aria-hidden="true"> <%= current_user.name %></i>
      </div>
      <div class="mb-2 text-black text-xl mt-10 space-x-4">
        <i class="fa fa-envelope fa-2x mr-4" aria-hidden="true"> <%= current_user.email %></i>
      </div>
    </div>
    <div class="mt-10 py-10 border-t border-black text-center">
      <div class="flex flex-wrap justify-center">
      <%= link_to t('.edit'), edit_profile_path, class: "px-4 py-2 rounded-md text-lg font-medium border shadow focus:outline-none focus:ring transition text-green-600 bg-green-50 border-green-200 hover:bg-green-100 active:bg-green-200 focus:ring-green-300" %>
      </div>
    </div>
  </div>
</section>