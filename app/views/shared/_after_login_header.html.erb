<nav id="after-login-header" class="fixed w-full z-30 top-0 text-white gradient">
  <div class="w-full container mx-auto flex flex-wrap items-center justify-between mt-0 py-2">
    <div class="pl-4 flex items-center">
      <%= link_to dashboard_path, data: { turbolinks: false }, class:"toggleColour text-white no-underline hover:no-underline font-bold text-2xl lg:text-4xl"  do %>
        <%= image_tag 'logo/white_logo.png', id: "js-header-white", class:"inline-block" %>
        <%= image_tag 'logo/orange_logo.png', id:"js-header-orange", class: 'hidden' %>
      <% end %>
    </div>
    <div class="block lg:hidden pr-4">
      <button id="after-login-nav-toggle" class="flex items-center p-1 text-pink-800 hover:text-gray-900 focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out">
        <svg class="fill-current h-6 w-6" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <title>Menu</title>
          <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" />
        </svg>
      </button>
    </div>
    <div class="w-full flex-grow lg:flex lg:items-center lg:w-auto hidden bg-white mt-2 lg:mt-0 lg:bg-transparent text-black p-4 lg:p-0 z-20" id="after-login-nav-content">
      <ul class="list-reset lg:flex justify-end flex-1 items-center" id="after-nav-list">
        <li class="mr-3">
          <%= link_to t('defaults.how_to_play'), explanation_path ,class:"inline-block py-2 px-4 text-black font-bold no-underline"%>
        </li>
        <li class="mr-3">
          <% if I18n.locale.to_s == "ja" %>
            <%= link_to t('defaults.lang_selection'), url_for(locale: 'en'), data: { turbolinks: false }, class:"inline-block py-2 px-4 text-black font-bold no-underline hover:text-gray-800 hover:text-underline py-2 px-4" %>
          <% else %>
            <%= link_to t('defaults.lang_selection'), url_for(locale: 'ja'), data: { turbolinks: false }, class:"inline-block py-2 px-4 text-black font-bold no-underline hover:text-gray-800 hover:text-underline py-2 px-4" %>
          <% end %>
        </li>
        </li>
        <li class="mr-3">
          <%= link_to t('defaults.games') , multiple_choice_questions_path, class:"inline-block text-black no-underline hover:text-gray-800 hover:text-underline py-2 px-4" %>
        </li>
        <li class="mr-3">
          <%= link_to t('defaults.videos'), lessons_path, class:"inline-block text-black no-underline hover:text-gray-800 hover:text-underline py-2 px-4" %>
