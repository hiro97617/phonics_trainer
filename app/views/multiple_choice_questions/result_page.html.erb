<div class="py-16 bg-sky-50 w-full" id="result-background">
  <p class="text-4xl text-center text-black"><%= t('.title', level: @level_part.level, part: @level_part.part) %> </p>
  <div class="container m-auto px-8 py-6 bg-green-100 border border-black w-5/12 my-12 text-gray-500 md:px-8 xl:px-0">
    <div class="grid grid-cols-1 place-items-center mb-4">
      <div class="w-3/4 m-6">
        <%= image_tag 'answer/congratulation.jpg' %>
      </div>
      <div>
        <p class="text-black text-2xl"><%= t('.your_score', name: current_user.name, full_score: @level_part.multiple_choice_questions.count, score: @multiple_choice_challenger.score ) %></p>
      </div>
      <div class="to-tweet">
        <div class="w-full px-3 py-4 my-8 bg-blue-300 justify-self-center rounded-md hover:bg-blue-400 focus:outline-none duration-100 ease-in-out">
          <svg class="h-8 w-8 text-blue-500"viewBox="0 0 24 24"fill="none"stroke="currentColor"stroke-width="2"stroke-linecap="round"stroke-linejoin="round">
            <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z" />
          </svg>
          <p class="text-white  text-xl"><%= t('.tweet') %> </p>
        </div>
      </div>
      <div class="mt-8">
        <%= link_to t('.to_top_page') , dashboard_path, class:"w-full px-4 py-2 m-6 rounded-md text-lg font-medium border shadow focus:outline-none focus:ring transition text-yellow-600 bg-yellow-200 border-yellow-200 hover:bg-yellow-300 active:bg-yellow-200 focus:ring-yellow-300" %>
        <% if @next_part.present? %>
          <%= link_to t('.to_next_part'), level_part_path(@next_part), class:"w-full px-4 py-2 m-6 rounded-md text-lg font-medium border shadow focus:outline-none focus:ring transition text-yellow-600 bg-yellow-200 border-yellow-200 hover:bg-yellow-300 active:bg-yellow-200 focus:ring-yellow-300" %>
        <% elsif @next_level.present? %>
          <%= link_to t('.to_next_level'), level_part_path(@next_level), class:"w-full px-4 py-2 m-6 rounded-md text-lg font-medium border shadow focus:outline-none focus:ring transition text-yellow-600 bg-yellow-100 border-yellow-200 hover:bg-yellow-200 active:bg-yellow-200 focus:ring-yellow-300" %>
        <% else %>
          <p class="text-4xl text-black"><%= t('.congratulations') %>  </p>
        <% end %>
      </div>
    </div>
  </div>
</div>