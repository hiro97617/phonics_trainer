<div class="bg-white">
  <% if @level_part.multiple_choice_questions.present? %>
    <%= form_with url: level_part_multiple_choice_questions_path, method: :post, local: true do |f| %>
      <%= f.submit t('.start'), class: "m-6 px-4 py-2 rounded-md text-sm font-medium border shadow focus:outline-none focus:ring transition text-green-600 bg-green-50 border-green-200 hover:bg-green-100 active:bg-green-200 focus:ring-green-300" %>
    <% end %>
  <% else %>
    <p class="text-black text-xl font-semibold m-6 pt-8"><%= t('.no_question') %></p>
  <% end %>
  <%= link_to t('.to_index') , multiple_choice_questions_path, class: "ml-6 px-4 py-2 rounded-md text-sm font-medium border shadow focus:outline-none focus:ring transition text-blue-600 bg-blue-50 border-blue-200 hover:bg-blue-100 active:bg-blue-200 focus:ring-blue-300" %>
</div>