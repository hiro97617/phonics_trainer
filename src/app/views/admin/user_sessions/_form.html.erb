<h1 class="mb-4 text-xl text-center font-semibold text-gray-700 dark:text-gray-200">管理者用Login</h1>
<%= form_with url: admin_login_path, method: :post do |f| %>
  <div class="mt-4">
    <%= f.label :email, "Email", class:"block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :email, placeholder:"Jane Doe", class:"bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" %>
  </div>
  <div class="mt-4">
    <%= f.label :password, "Password", class:"block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.password_field :password, placeholder: "***************", class:"bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" %>
  </div>
  <div class="mt-8">
    <%= f.submit "ログイン", class:"bg-gray-700 text-white font-bold py-2 px-4 w-full rounded hover:bg-gray-600" %>
  </div>
<% end %>
